<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F8FF"
    tools:context="uchan.weather.SettingActivity">

    <TextView
        android:id="@+id/location_alert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textSize="30dp"
        android:text="관심 지역 설정하기"
        android:drawableRight="@drawable/star_icon"
        android:drawablePadding="10dip"
        android:layout_marginBottom="30dp"
        android:layout_above="@+id/noti"
        android:layout_alignStart="@+id/noti" />

    <TextView
        android:id="@+id/noti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:textColor="#000"
        android:textSize="30dp"
        android:text="상단에 날씨 보여주기"
        android:layout_alignBottom="@+id/tgb"
        android:layout_alignParentStart="true" />

    <ToggleButton
        android:id="@+id/tgb"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:background="@drawable/toggle_selector"
        android:checked="false"
        android:text=""
        android:textOff=""
        android:textOn=""
        android:layout_marginTop="223dp"
        android:layout_marginStart="13dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/noti" />

    <TextView
        android:id="@+id/loca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textSize="20dp"
        android:text="TextView"
        android:layout_above="@+id/location_alert"
        android:layout_alignStart="@+id/location_alert"
        android:layout_marginBottom="42dp" />

</RelativeLayout>
